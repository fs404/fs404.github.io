<section class="sign-in" style="margin-top: 130px">
	<div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
            		<div class="logo-kaos" style="background-color: #b71d1d;text-align: center;border-bottom: 5px solid #960b0b;border-radius: 5px;padding: 10px">
						<img src="https://www.rubypedia.com/resources/images/logo-jumbroton.png" class="img-responsive" style="width:300px;margin-left: 11px">
					</div>
					<div class="card">
                    <div class="card-content" style="border-radius: 0px;">
                        <div class="form-login">
                        	<form action="/sign-up/create/" method="POST">
                        		<div class="form-group">
                                    <label for="nama"><i class="fa fa-user-circle-o"></i> NAMA LENGKAP</label>
                                    <input type="text" class="form-control" name="login[nama]" id="nama" aria-describedby="nama" placeholder="Masukkan Nama Lengkap Anda" required>
                                   
                                </div>
                                <div class="form-group">
                                    <label for="username"><i class="fa fa-envelope"></i> ALAMAT EMAIL</label>
                                    <input type="text" class="form-control" name="login[email]" id="username" aria-describedby="username" placeholder="Masukkan Alamat Email Anda" required>
                                   
                                </div>
                                <div class="form-group">
                                    <label for="password"><i class="fa fa-unlock"></i> PASSWORD</label>
                                    <input type="password" class="form-control" name="login[password]" id="password" placeholder="Masukkan Password Anda" required>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                    <input type="checkbox" class="form-check-input">
                                    Ingatkan Saya
                                    </label>
                                </div>
                                <div class="form-group">
									<% flash.each do |key, value| %>
								        <div class="alert alert-<%= key %>" style="margin-top: 5px"> <%= value %></div>
								    <% end %>
                                </div>
                                <div class="form-group" style="text-align: center;">
                                     <button type="submit" class="btn btn-success btn-load" data-loading-text="<i class='fa fa-spinner fa-spin '></i> Mendaftar..." style="cursor:pointer;background-color: #b71e1e;border-color: #b71e1e;border-radius: 25px"><i class="fa fa-user-plus"></i> Daftar </button>
                                     <button type="reset" class="btn btn-warning" style="cursor:pointer;background-color: #ec971f;border-color: #ec971f;border-radius: 25px">Reset <i class="fa fa-repeat"></i></button>
                                     <hr>
                                     <a href="/sign-in/" class="btn btn-warning" style="cursor:pointer;background-color: #000;border-color: #000;border-radius: 25px"><i class="fa fa-sign-in"></i>  Masuk ? </a>
                                </div>
                            </form>                      
                    </div>

                </div>
                
            </div>
            </div>
        </div>
    </div>
</section>
