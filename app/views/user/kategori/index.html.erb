<section class="blog" style="margin-top: 80px">
  <div class="container">
    <div class="row">


      <div class="col-md-3">
        <% content_for(:sidebar) do %>
          <%= render :partial => "layouts/sidebar" %>
        <% end %>

        <%= yield :sidebar %>

      </div>


      <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-heading" style="background-color: #b71d1d;border-bottom: #841010 4px solid;font-family: Roboto;font-weight: 300;font-size: 17px;color: white;text-transform: uppercase;"><i class="fa fa-folder"></i> KATEGORI</div>
          <div class="panel-body">
            <%= form_tag(user_kategori_url, method: :get) do %>
              <div class = "input-group">
                <span class = "input-group-btn">
                    <a href="/user/kategori/add/" class = "btn btn-default" style="background-color: #b71d1d;border-color: #b71d1d;color:white" type = "button"><i class="fa fa-plus-circle"></i> Tambah
                    </a>
                </span>
                <%= text_field_tag :search, params[:search], class: "form-control", required: "required", placeholder: "Cari Berdasarkan Nama kategori" %>
                <span class = "input-group-btn">
                	<button class = "btn btn-default" style="background-color: #b71d1d;border-color: #b71d1d;color:white" type = "submit">
                       <i class="fa fa-search"></i> Cari
                	</button>
                </span>
              </div>
            <% end %>
            <br>
            <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                  <th class="text-center"><i class="fa fa-vcard-o"></i> NO.</th>
                  <th class="text-center"><i class="fa fa-folder"></i> NAMA KATEGORI</th>
                  <th class="text-center"><i class="fa fa-file-o"></i> KETERANGAN</th>
                  <th class="text-center"><i class="fa fa-calendar-o"></i> CREATED</th>
                  <th class="text-center"><i class="fa fa-cogs"></i> OPTIONS</th>
                </tr>
                </thead>

                <tbody>
                <% @category.each_with_index do |data, index| %>
                  <tr>
                    <td style="text-align: center;"><%= index + 1 %></td>
                    <td><%= data.nama_kategori %></td>
                    <td><%= data.descriptions %></td>
                    <td><%= data.created_at %></td>
                    <td style="text-align: center;">
                      <a href="/user/kategori/edit/<%= data.id %>/" class="btn btn-success btn-sm" style="background-color: #58781e;border-color: #58781e"><i class="fa fa-pencil"></i> Edit</a>
                      <a href="/user/kategori/delete/<%= data.id %>/" class="btn btn-danger btn-sm" style="background-color: #c38122;border-color: #c38122"><i class="fa fa-trash"></i> Delete</a>
                    </td>
                  </tr>
                <% end %>
                </tbody>
              </table>
            </div>
            <div class="text-center">
              <%= paginate @category %>
            </div>
          </div>
        </div>
      </div>


    </div>
  </div>
</section>